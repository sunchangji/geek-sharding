<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suncj.task.week08.mapper.OrderMapper">
    <resultMap id="OrderMap" type="com.suncj.task.week08.entity.OrderEntity">
        <id column="order_id" property="orderId"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="buy_num" property="buyNum"/>
        <result column="product_price" property="productPrice"/>
        <result column="average_cost" property="averageCost"/>
        <result column="fee_money" property="feeMoney"/>
        <result column="warehouse_id" property="warehouseId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="tb">t_order</sql>

    <sql id="cols_exclude_id">
        order_id,
        user_id,
        product_id,
        product_name,
        buy_num,
        product_price,
        average_cost,
        fee_money,
        warehouse_id,
        create_time,
        update_time
    </sql>

    <select id="findList" resultMap="OrderMap">
        select * from <include refid="tb"/> where user_id=#{userId} and order_id=#{orderId}
    </select>

    <insert id="create">
        insert into
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        values (
        #{orderId},
        #{userId},
        #{productId},
        #{productName},
        #{buyNum},
        #{productPrice},
        #{averageCost},
        #{feeMoney},
        #{warehouseId},
        #{createTime},
        #{updateTime}
        )
    </insert>

    <update id="update">
        update
        <include refid="tb"/>
        set product_name=#{productName} where order_id=#{orderId}
    </update>

    <insert id="batchCreate">
        insert into
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.orderId},
            #{item.userId},
            #{item.productId},
            #{item.productName},
            #{item.buyNum},
            #{item.productPrice},
            #{item.averageCost},
            #{item.feeMoney},
            #{item.warehouseId},
            #{item.createTime},
            #{item.updateTime}
            )
        </foreach>

    </insert>
</mapper>